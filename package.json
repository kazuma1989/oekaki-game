{
  "name": "oekaki-game",
  "version": "1.0.0",
  "repository": "git@github.com:kazuma1989/oekaki-game.git",
  "author": "kazuma1989 <kazuma.ebina@quipper.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "snowpack --optimize --clean --dest ./public/web_modules/",
    "start": "concurrently npm:server npm:compile-watch",
    "build": "concurrently npm:compile npm:inject-manifest",
    "test": "tsc",
    "server": "live-server ./public",
    "compile": "tsc --project ./tsconfig-build.json",
    "compile-watch": "npm run compile -- --watch",
    "inject-manifest": "workbox injectManifest ./workbox-config.js"
  },
  "dependencies": {
    "immer": "^5.3.2",
    "preact": "^10.2.1",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@types/redux": "^3.6.0",
    "concurrently": "^5.1.0",
    "live-server": "^1.2.1",
    "snowpack": "^1.1.2",
    "typescript": "^3.7.5",
    "workbox-cli": "^5.0.0"
  },
  "snowpack": {
    "webDependencies": [
      "immer",
      "preact",
      "preact/hooks",
      "redux"
    ]
  }
}
